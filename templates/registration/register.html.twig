{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container mt-5" style="max-width: 500px">
        <div class="card">
            <div class="card-header">
                Register
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="registration_form[email]"
                               placeholder="Enter email"
                               required
                        >
                    </div>
                    <div class="form-group mt-2">
                        <label>Password</label>
                        <input type="password" class="form-control" name="registration_form[plainPassword]"
                               placeholder="Enter password"
                               required
                        >
                    </div>
                    <div class="form-group mt-2">
                        <label>Terms</label>
                        <input type="checkbox" class="form-check-input" name="registration_form[agreeTerms]"
                               required
                        >
                    </div>

                    <input type="hidden" value="{{ csrf_token('registration_form') }}" name="registration_form[_token]">

                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>

                or
                <br>
                <a href="{{ path('login') }}">Login</a>
            </div>
        </div>
    </div>
{% endblock %}
